{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@mevluna/types": ["../types/src"]
    },
    "types": ["jest", "node"],
    "incremental": true
  },
  "include": ["next-env.d.ts", "./src", "../types/**.d.ts"],
  "exclude": ["node_modules", "../node_modules"],
  "ts-node": {
    "files": "true"
  }
}
